<turbo-frame id="sign-out-frame">
  <% if user_signed_in? %>
    <h2>Hello <%= current_user.email %></h2>
    <%= link_to 'Sign out', destroy_user_session_path, method: :delete, data: { turbo_method: :delete } %>
  <% else %>
    <%= link_to 'Sign in', new_user_session_path %>
  <% end %>
</turbo-frame>


<div class="container-md">
  <div class="row">
    <div class="col">
      <h1 class="float-left">Post List</h1>
    </div>
    <div class="col text-right">
      <%= form_tag posts_path, method: :get, class: "form-inline" do %>
        <div class="d-flex justify-content-end">
          <label for="sort_by" class="mr-2">Sort By:</label>
          <%= select_tag :sort_by, options_for_select({ "Ascending" => "asc", "Descending" => "desc" }, params[:sort_by]), class: "form-control form-control-sm mr-2", style: "width: 100px;" %>
          <%= submit_tag "Sort", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>

  </div>
  <table class="table">
    <thead class="table-dark">
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>Content</th>
      <th>Category</th>
      <th>Created At</th>
      <th>Updated At</th>
      <th>User</th>
      <th>Action</th>
    </tr>
    </thead>
    <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.id %></td>
        <td><%= post.title %></td>
        <td><%= truncate(post.content, length: 50, omission: '...') %></td>
        <td><%= post.categories.pluck(:name).join(', ') %></td>
        <td><%= post.created_at %></td>
        <td><%= post.updated_at %></td>
        <td><%= post.user&.email %></td>
        <td>
          <%= link_to 'Show', post_path(post) %>
          <%= link_to 'Edit', edit_post_path(post) if user_signed_in? && post.user == current_user %>
          <%= button_to 'Delete', post_path(post), class: 'btn btn-outline-danger', method: :delete if user_signed_in? && post.user == current_user %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <%= paginate @posts %>
  <%= link_to 'New', new_post_path %>
</div>







