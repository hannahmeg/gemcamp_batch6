<div class="container-md">
  <div class="row">
    <div class="col">
      <h1 class="float-left">Post List</h1>
    </div>
    <div class="col text-right">
      <%= form_tag posts_path, method: :get, class: "form-inline" do %>
        <div class="d-flex justify-content-end">
          <label for="sort_by" class="mr-2">Sort By:</label>
          <%= select_tag :sort_by, options_for_select({ "Ascending" => "asc", "Descending" => "desc" }, params[:sort_by]), class: "form-control form-control-sm mr-2", style: "width: 100px;" %>
          <%= submit_tag "Sort", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
    <!-- Your other content here -->

  </div>
  <table class="table">
    <thead class="table-dark">
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>Content</th>
      <th>Category</th>
      <th>Created At</th>
      <th>Updated At</th>
      <th>Action</th>
    </tr>
    </thead>
    <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.id %></td>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><%= post.categories.pluck(:name).join(', ') %></td>
        <td><%= post.created_at %></td>
        <td><%= post.updated_at %></td>
        <td>
          <%= link_to 'Show', post_path(post) %>
          <%= link_to 'Edit', edit_post_path(post) %>
          <%= button_to 'Delete', post_path(post), method: :delete, class: 'btn btn-outline-danger' %>
          <%= link_to 'Comments', post_comments_path(post) %>
          <%= link_to 'New Comment', new_post_comment_path(post) %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <%= link_to 'New', new_post_path %>
</div>
