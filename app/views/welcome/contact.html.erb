  <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
  <title>Responsive Form</title>
</head>
<body>
<div class="container">
  <div class="wrapper">
    <div class="form">
      <div class="left-col">
        <img src="img/ellipse1.png" class="img1" alt="">
<!--        <h2>Leave us your email and get a BuJo Starter Kit</h2>-->
        <div class="bull">
